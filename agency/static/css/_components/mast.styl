.mast-wrapper
  background #fff

.mast
  padding 10px 0
  position relative
  clearfix()
  @media (min-width: 37.5em)
    padding 13px 0
  @media (min-width: 56.25em)
    padding 23px 0

.brand
  width 46px
  display block
  .brand-symbol
    width 100%
  .brand-full
    display none
  @media (min-width: 37.5em)
    margin 0 auto
    width 213px
    .brand-symbol
      display none
    .brand-full
      width 100%
      display block

.hamburger
  width 31px
  height 20px
  display none
  position absolute
  top 10px
  right 0
  z-index 100
  span
    width 100%
    height 4px
    display block
    position absolute
    top 40%
    background #000
    transition all .2s ease-out

.bun--top
  transform translateY(-8px)

.bun--bottom
  transform translateY(8px)

.hamburger.is-open
  .meat
    background transparent
  .bun--top
    transform translateY(0) rotate(45deg)
  .bun--bottom
    transform translateY(0) rotate(-45deg)
