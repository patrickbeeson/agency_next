.hero-wrapper
  background url(/assets/img/bg-texture.png)

.hero
  padding 70px 0 50px
  background url(/assets/img/bg-hero.png) 50% 12% no-repeat
  background-size 25px 14px
  @media (min-width: 43.75em)
    padding 110px 0 70px
    background-size 60px 34px
  @media (min-width: 56.25em)
    padding 170px 0 100px
    background-size 80px 45px
    background-position 50% 9%

.hero-blurbs
  //

.hero-blurb
  margin 0 0 20px
  font-size 24px
  font-family sentinel
  line-height 1.25
  text-transform none
  text-align center
  @media (min-width: 30em)
    font-size 28px
  @media (min-width: 43.75em)
    margin 0 0 30px
    font-size 58px
    line-height 1
  @media (min-width: 56.25em)
    margin 0 0 40px
    font-size 88px

.hero-blurb-badge
  margin-bottom 20px
  width 100%
  height 37px
  position relative
  span
    margin 0 auto
    width 82px
    height 37px
    display block
    font-size 14px
    font-family vollkorn
    font-weight 400
    font-style italic
    line-height 37px
    text-align center
    background url(/assets/img/bg-hero-badge.svg) no-repeat
    background-size 82px 37px
  &:before,
  &:after
    content ''
    display block
    width calc(50% \- 55px)
    height 1px
    position absolute
    top calc(50% \- 1px)
    left 0
    background brand-gray-dark
  &:after
    left auto
    right 0
  @media (min-width: 43.75em)
    margin-bottom 30px
  @media (min-width: 56.25em)
    margin-bottom 40px
    height 51px
    span
      width 114px
      height 51px
      font-size 20px
      line-height 51px
      background-size 114px 51px
    &:before,
    &:after
      width 35%
      left 6%
    &:after
      left auto
      right 6%

.hero-tagline
  margin 0
  font-size 12px
  font-family vollkorn
  font-weight 400
  font-style italic
  line-height 1.3
  text-transform none
  text-align center
  @media (min-width: 30em)
    font-size 14px
  @media (min-width: 43.75em)
    font-size 20px
  @media (min-width: 56.25em)
    margin 0 auto
    width 90%
    font-size 26px