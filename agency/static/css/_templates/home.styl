// --------------------------------------------------
//   PEOPLE
// --------------------------------------------------
.people-wrapper
  //

.people
  .section-blurb
    margin-left 30px
    margin-right 30px
    max-width 980px
    @media (min-width: 61.25em)
      margin-left auto
      margin-right auto
      width 60%

.people-grid
  border-top 1px solid brand-gray-light
  clearfix()

.person
  margin 0
  width 33.3333%
  max-width 500px
  max-height 500px
  position relative
  float left
  overflow hidden
  border 1px solid brand-gray-light
  border-width 0 1px 1px 0
  cursor pointer
  img
    max-width 100%
    // min-height 100%
    display block
    position relative
  figcaption
    padding 10%
    width 100%
    height 100%
    position absolute
    top 0
    // left 100%
    transform translateX(100%)
    text-align center
    color #fff
    background rgba(0,0,0,.85)
    opacity 0
    cursor pointer
    transition transform .25s ease-in-out, opacity .25s ease-in-out
  &:hover
    figcaption
      transform translateX(0)
      opacity 1
  .person-name
    margin 0 0 10px
    padding 0 0 10px
    position relative
    font-size 11px
    color #fff
    &:after
      content ''
      width 25%
      height 1px
      display block
      position absolute
      left 50%
      bottom 0
      transform translate3d(-50%,0,0)
      background #fff
  .person-title
    margin 0 0 3px
    font-size 10px
    font-family merriweather
    font-style italic
    line-height 1
  .person-hometown
    margin 0
    font-size 8px
    font-family nevis
    text-transform uppercase
  @media (min-width: 48em)
    width 25%
    figcaption
      padding 20% 10%
      letter-spacing 0.2em
    .person-name
      font-size 15px
    .person-title
      font-size 12px
    .person-hometown
      font-size 10px
  @media (min-width: 56.25em)
    .person-name
      margin 0 0 20px
      padding 0 0 15px
      font-size 18px
      &:after
        width 15%
    .person-title
      font-size 16px
    .person-hometown
      font-size 12px
  @media (min-width: 61.25em)
    width 20%
    figcaption
      padding 15% 10%
  @media (min-width: 63.75em)
    figcaption
      padding 20% 10%
    // .person-name
    //   font-size 22px
    // .person-title
    //   font-size 22px
    // .person-hometown
    //   font-size 15px
  @media (min-width: 75em)
    figcaption
      padding 25% 10%
    .person-name
      font-size 22px
    .person-title
      font-size 22px
    .person-hometown
      font-size 15px

