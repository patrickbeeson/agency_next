.map-wrapper
  margin-bottom 30px
  width 100%
  .map
    width 100%
    height 200px
    position relative
    overflow hidden
    transform translateZ(0)
  iframe,
  object,
  embed
    width 100%
    height 100%
    position absolute
    top 0
    left 0
  @media (min-width: 30em)
    margin-bottom 60px
    .map
      height 300px
  @media (min-width: 48em)
    .map
      height 350px
  @media (min-width: 56.25em)
    .map
      height 450px

.contact-form
  .form-label
    display none
  .form-button
    margin-top -10px
  @media (min-width: 43.75em)
    .form-textarea
      height 90px
    .form-button
      float right