// --------------------------------------------------
//   ALL SECTIONS
// --------------------------------------------------
.experience,
.people,
.contact
  padding 40px 0
  @media (min-width: 43.75em)
    padding 80px 0
  @media (min-width: 56.25em)
    padding 120px 0

.section-title
  font-size 18px
  font-family merriweather
  font-style italic
  text-align center
  text-transform none
  line-height 1.25
  letter-spacing .08em
  em
    display inline-block
    position relative
    font-family nevis
    font-style normal
    text-transform uppercase
    &:before,
    &:after
      display block
      width 38px
      height 10px
      position absolute
      top -2px
    &:before
      content url(../img/bg-section-title-before-sm.png)
      left -55px
    &:after
      content url(../img/bg-section-title-after-sm.png)
      right -55px
  @media (min-width: 30em)
    font-size 20px
  @media (min-width: 48em)
    font-size 26px
    em
      &:before,
      &:after
        top -4px
  @media (min-width: 56.25em)
    font-size 35px
    em
      &:before,
      &:after
        width 91px
        height 31px
        top 3px
      &:before
        content url(../img/bg-section-title-before.png)
        left -112px
      &:after
        content url(../img/bg-section-title-after.png)
        right -112px

.section-blurb
  margin 0 0 40px
  font-size 12px
  font-family merriweather
  font-weight 400
  font-style italic
  line-height 1.3
  text-align center
  @media (min-width: 30em)
    font-size 14px
  @media (min-width: 43.75em)
    font-size 20px
    line-height 1.5
  @media (min-width: 56.25em)
    margin-left auto
    margin-right auto
    width 75%
    font-size 23px

